[Unit]
Description=Start Toolforge harbor containers on boot
After=network-online.target
After=multi-user.target

[Service]
Type=oneshot
ExecStart={{ lima_kilo_repo }}/helpers/toolforge_harbor_compose.sh up -d
TimeoutSec=30
Restart=on-failure
RestartSec=30
StartLimitInterval=350
StartLimitBurst=10

[Install]
WantedBy=multi-user.target
